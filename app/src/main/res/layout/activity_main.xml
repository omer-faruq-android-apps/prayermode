<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:layoutDirection="locale">

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:layoutDirection="locale"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="?android:textColorPrimary"
        android:textDirection="locale"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="80dp">
            <!-- Switch Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/switchButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvSwitchState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/Off"
                        android:textAlignment="viewStart"
                        android:textColor="?android:textColorPrimary"
                        android:textDirection="locale"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/activateSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="0dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Schedule Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/daily_schedule"
                android:textAlignment="viewStart"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- Calculation Methods Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/calculationMethodsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/TopRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_method"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvCalculationMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/calculation_method"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- Duration Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/durationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_silent_duration_after_adhan"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvSilentDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/daily_silent_duration"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Joumoua Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:text="@string/joumoua"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- Before Dhuhr Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/beforeDhuhrContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/TopRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/before_dhuhr"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvBeforeDhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/duration_before_dhuhr"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- After Dhuhr Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/afterDhuhrContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/after_dhuhr"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvAfterDhuhr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/duration_after_dhuhr"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Ramadan Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:text="@string/ramadan"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- Tarawih Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tarawihContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/TopRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tarawih_silent_duration"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvTarawih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/tarawih_duration"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- Tahajjud Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tahajjudContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tahajjud_silent_duration"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvTahajjud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/tahajjud_duration"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Eid Card -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:text="@string/eid_alfitr_and_eid_aladha"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- Time selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/eidTimeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/TopRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eid_time_prayer"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvEidTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/eid_time"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- Eid duration Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/eidDurationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/eid_silent_duration"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvEidDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/eid_duration"
                        android:textColor="@color/tvTextColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Privacy -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/privacy"
                android:textAlignment="viewStart"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- Privacy Notice Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/TopRoundedCorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_notice"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="18sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- ToS Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/termsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:text="@string/terms"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>
            <!-- Mid line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor" />
            <!-- Permissions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permissionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/BottomRoundedCorners">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:text="@string/permission"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

            <!--Help Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/helpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:text="@string/help"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

            <!--Donation Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/donationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:text="@string/donation"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>